<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_exits"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone"
    tools:visibility="visible">

    <TextView
        android:id="@+id/exit_1"
        style="@style/CommonTextRATP"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/line_view_vertical_margin_large"
        android:layout_weight="2"
        android:drawableLeft="@drawable/ic_exit_to_app_white_48dp"
        android:drawablePadding="@dimen/exit_drawable_padding"
        android:drawableStart="@drawable/ic_exit_to_app_white_48dp"
        android:text="@string/exit_1"/>

    <TextView
        android:id="@+id/exit_2"
        style="@style/CommonTextRATP"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/line_view_vertical_margin"
        android:layout_weight="2"
        android:drawableLeft="@drawable/ic_exit_to_app_white_48dp"
        android:drawablePadding="@dimen/exit_drawable_padding"
        android:drawableStart="@drawable/ic_exit_to_app_white_48dp"
        android:text="@string/exit_2"/>

    <TextView
        android:id="@+id/exit_3"
        style="@style/CommonTextRATP"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/line_view_vertical_margin"
        android:layout_weight="2"
        android:drawableLeft="@drawable/ic_exit_to_app_white_48dp"
        android:drawablePadding="@dimen/exit_drawable_padding"
        android:drawableStart="@drawable/ic_exit_to_app_white_48dp"
        android:text="@string/exit_3"/>

    <TextView
        android:id="@+id/exit_4"
        style="@style/CommonTextRATP"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/line_view_vertical_margin"
        android:layout_weight="2"
        android:drawableLeft="@drawable/ic_exit_to_app_white_48dp"
        android:drawablePadding="@dimen/exit_drawable_padding"
        android:drawableStart="@drawable/ic_exit_to_app_white_48dp"
        android:text="@string/exit_4"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/line_view_vertical_margin"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/back_to_view1_from_exit_view"
            android:layout_width="@dimen/circle_button_size"
            android:layout_height="@dimen/circle_button_size"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/circle_black"
            android:src="@drawable/ic_chevron_left_white_48dp"/>
    </RelativeLayout>

</LinearLayout>