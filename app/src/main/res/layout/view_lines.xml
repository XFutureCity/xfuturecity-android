<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/metro_lines"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone"
    tools:visibility="visible">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/line_view_vertical_margin"
        android:layout_weight="3">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/btn_line_3"
                style="@style/CommonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/line_text_vertical_margin"
                android:layout_marginRight="@dimen/line_text_vertical_margin"
                android:text="@string/line"/>

            <TextView
                style="@style/CommonTextMedium"
                android:layout_width="@dimen/line_number_size"
                android:layout_height="@dimen/line_number_size"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/btn_line_3"
                android:layout_toRightOf="@+id/btn_line_3"
                android:background="@drawable/circle_line_3"
                android:gravity="center"
                android:text="3"
                android:textColor="@android:color/white"/>

        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/line_view_vertical_margin"
        android:layout_weight="3">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/btn_line_7"
                style="@style/CommonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/line_text_vertical_margin"
                android:layout_marginRight="@dimen/line_text_vertical_margin"
                android:text="@string/line"/>

            <TextView
                style="@style/CommonTextMedium"
                android:layout_width="@dimen/line_number_size"
                android:layout_height="@dimen/line_number_size"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/btn_line_7"
                android:layout_toRightOf="@+id/btn_line_7"
                android:background="@drawable/circle_line_7"
                android:gravity="center"
                android:text="7"
                android:textColor="@android:color/white"/>

        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/line_view_vertical_margin"
        android:layout_weight="3">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/btn_line_8"
                style="@style/CommonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/line_text_vertical_margin"
                android:layout_marginRight="@dimen/line_text_vertical_margin"
                android:text="@string/line"/>

            <TextView
                style="@style/CommonTextMedium"
                android:layout_width="@dimen/line_number_size"
                android:layout_height="@dimen/line_number_size"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/btn_line_8"
                android:layout_toRightOf="@+id/btn_line_8"
                android:background="@drawable/circle_line_8"
                android:gravity="center"
                android:text="8"/>

        </RelativeLayout>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/line_view_vertical_margin"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/back_to_view1"
            android:layout_width="@dimen/circle_button_size"
            android:layout_height="@dimen/circle_button_size"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/circle_black"
            android:src="@drawable/ic_chevron_right_white_48dp"/>
    </RelativeLayout>
</LinearLayout>