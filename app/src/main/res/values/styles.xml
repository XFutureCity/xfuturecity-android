<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ColoredButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/button_text_size_big</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CommonText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/button_text_size_big</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CommonTextSmall">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/button_text_size_small</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
